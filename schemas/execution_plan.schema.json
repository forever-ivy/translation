{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "execution_plan.schema.json",
  "title": "ExecutionPlan",
  "type": "object",
  "required": [
    "task_type",
    "confidence",
    "estimated_minutes",
    "complexity_score"
  ],
  "properties": {
    "task_type": {
      "type": "string",
      "enum": [
        "REVISION_UPDATE",
        "NEW_TRANSLATION",
        "BILINGUAL_REVIEW",
        "EN_ONLY_EDIT",
        "MULTI_FILE_BATCH"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "estimated_minutes": {
      "type": "number",
      "minimum": 1
    },
    "complexity_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "time_budget_minutes": {
      "type": "number",
      "minimum": 1,
      "maximum": 45
    }
  },
  "additionalProperties": true
}

